    }
  },
  "rvm": {
    "user_default_ruby": "2.3.1",
    "user_install_rubies": true,
    "installs": {
      "deploy": true
    },
    "user_installs": [
      {
        "user": "deploy"
      }
    ],
    "gpg": {}
  },
  "postgresql": {
    "version": "9.4",
    "users": [
      {
        "username": "deploy",
        "encrypted_password": "$1$FQNV9grL$u.G4YnW.bcSYHZpNiBfKs0",
        "superuser": true,
        "createdb": true,
        "login": true
      }
    ],
    "databases": [
      {
        "name": "hotspot_production",
        "owner": "deploy",
        "template": "template0",
        "encoding": "UTF-8",
        "locale": "en_US.UTF-8"
      }
    ]
  },
  "monit": {
