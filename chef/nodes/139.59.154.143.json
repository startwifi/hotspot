      "permit_root_login": "no",
      "r_s_a_authentication": "no"
    },
    "client": {
      "github.com": {
        "user_known_hosts_file": "/dev/null",
        "strict_host_key_checking": "no"
      }
    }
  },
  "nginx": {
    "install_method": "source",
    "default_site_enabled": false,
    "source": {
      "version": "1.11.3",
