= render 'shared/settings_links'

.row
  .col-md-offset-4.col-md-4
    = form_for @company, url: advanced_settings_path, method: :put do |f|
      .form-group
        = f.label :sms_auth, t('.sms')
        = f.select :sms_auth, [[t('.disabled'), :disabled], [t('.enabled'), :normal], [t('.preauth'), :preauth], [t('.preauth_normal'), :preauth_normal]], {}, class: 'form-control'
      .form-group
        = f.label :sms_auth_link_redirect, t('.sms_auth_link_redirect')
        = f.text_field :sms_auth_link_redirect, class: 'form-control'
      .form-group
        = f.submit t('.save'), class: 'btn btn-primary'
