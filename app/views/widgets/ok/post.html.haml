.panel.panel-default
  .panel-heading
    %i.fa.fa-odnoklassniki-square
    Ok: share post for continue
  .panel-body
    %div
      %b= current_user.name
    %div
      %small= "Today, #{Time.zone.now.strftime('%H:%M')}"
    %div= @company.ok.post_text
    %div= image_tag @company.ok.post_image, alt: @company.name, class: 'img-responsive'
  .panel-footer
    = link_to 'Share post', event_post_path(:ok), class: 'btn btn-primary btn-block', id: 'button_post'
.text-center= link_to 'Cancel', auth_path
