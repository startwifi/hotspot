%h2= "Company \"#{@company.name}\""

.col-md-6
  %h3 Administrators
  %table.table.table-striped
    %thead
      %th Email
      %th Last Sign In
    %tbody
      - @admins.each do |admin|
        %tr
          %td= admin.email
          %td= admin.last_sign_in_at
  %p= link_to 'Add new admin', new_admin_company_path(@company), class: 'btn btn-primary'
.col-md-6
  %h3 Last events
  = render 'dashboards/recent_events'

