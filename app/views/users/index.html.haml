%h3= t('.users')

%center
  = search_form_for @q, class: 'form-inline' do |f|
    .form-group
      = f.search_field :name_cont, placeholder: t('.name'), class: 'form-control'
    .form-group
    = f.search_field :provider_cont, placeholder: t('.provider'), class: 'form-control'
    .form-group
    = f.search_field :uid_cont, placeholder: t('.uid'), class: 'form-control'
    .form-group
    = f.search_field :email_cont, placeholder: t('.email'), class: 'form-control'
    = f.submit class: 'btn btn-default'

.col-md-12.table-responsive
  %table.table.table-striped
    %thead
      %th= t('.name')
      %th= t('.provider')
      %th= t('.uid')
      %th= t('.email')
      %th= t('.created')
    %tbody
      - @users.each do |user|
        %tr
          = render user
