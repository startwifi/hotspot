= render 'shared/settings_links'

- if @fb
  .row
    .col-md-6.col-md-offset-3
      %table.table
        %tr
          %th Group
          %td= "#{@fb.group_name} (#{@fb.group_id})"
        %tr
          %th Text on the wall
          %td= @fb.post_text
        %tr
          %th Image on the wall
          %td= link_to 'Show', @fb.post_image.url if @fb.post_image?
        %tr
          %th Link
          %td= @fb.post_link
        %tr
          %th Redirection
          %td= @fb.link_redirect
        %tr
          %th Action
          %td= @fb.action
      %p= link_to 'Edit', edit_settings_fb_path, class: 'btn btn-default'
- else
  %p.text-center= link_to 'Add Facebook', new_settings_fb_path, class: 'btn btn-lg btn-primary'
